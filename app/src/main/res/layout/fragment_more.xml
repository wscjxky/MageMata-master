<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >


    <!-- 全圆角-->
    <!--<LinearLayout style="@style/wrap_layout"-->
    <!--android:id="@+id/linearLayout">-->
    <!--</LinearLayout>-->

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/more_userview"
        android:layout_width="96dp"
        android:layout_height="96dp"
        app:civ_border_width="2dp"
        android:src="@drawable/tab_ipgw"
        app:civ_border_color="#FF000000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp" />

    <LinearLayout style="@style/wrap_layout"
        android:id="@+id/linearLayout2"
        android:layout_marginTop="66dp"
        android:layout_below="@+id/more_userview"
        android:layout_centerHorizontal="true">
        <!-- 上圆角-->
        <LinearLayout style="@style/top_layout">
            <TextView style="@style/usertext" android:text="钱包"
                android:id="@+id/more_wallet" />
            <ImageView style="@style/img_arrow"/>
        </LinearLayout>

        <!-- 分割线 -->
        <View style="@style/bg_line"/>
        <!-- 无圆角-->
        <LinearLayout style="@style/mid_layout">
            <TextView style="@style/usertext" android:text="绩点计算器"
                android:id="@+id/more_calculate" />
            <ImageView style="@style/img_arrow"/>
        </LinearLayout>
        <View style="@style/bg_line"/>
        <LinearLayout style="@style/mid_layout"
            android:id="@+id/more_linel_changeskin"
            android:clickable="true"
           >
            <TextView style="@style/usertext"
                android:text="更换皮肤"

                />
            <ImageView style="@style/img_arrow"/>
        </LinearLayout>
        <View style="@style/bg_line"/>
        <!-- 下圆角-->
        <LinearLayout style="@style/bottom_layout">
            <TextView style="@style/usertext" android:text="常用信息"
                android:id="@+id/more_info" />
            <ImageView style="@style/img_arrow"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>