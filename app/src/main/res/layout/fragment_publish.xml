<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
>

    <TextView
        style="@style/label"
        android:text="发布凑单信息"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/publish_iv_join"
        android:layout_alignRight="@+id/publish_iv_lost"
        android:layout_alignEnd="@+id/publish_iv_lost"
        android:id="@+id/textView3" />

    <ImageView
        android:layout_height="100dp"
        app:srcCompat="@drawable/lostfound"
        android:id="@+id/publish_iv_join"
        android:cropToPadding="false"
        android:layout_width="100dp"
        android:clickable="true"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <TextView
        style="@style/label"
        android:text="发布失物招领"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/textView"
        android:layout_below="@+id/publish_iv_lost"
        android:layout_alignLeft="@+id/publish_iv_lost"
        android:layout_alignStart="@+id/publish_iv_lost"
        android:textAppearance="?android:attr/textAppearanceLarge" />


    <ImageView
        android:layout_height="100dp"
        app:srcCompat="@drawable/lostfound"
        android:id="@+id/publish_iv_used"
        android:cropToPadding="false"
        android:layout_width="100dp"
        android:clickable="true"
        android:layout_marginRight="59dp"
        android:layout_marginEnd="59dp"
        android:layout_alignTop="@+id/publish_iv_lost"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_height="100dp"
        app:srcCompat="@drawable/lostfound"
        android:id="@+id/publish_iv_lost"
        android:layout_marginTop="28dp"
        android:cropToPadding="false"
        android:layout_width="100dp"
        android:layout_marginLeft="38dp"
        android:layout_marginStart="38dp"
        android:clickable="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView style="@style/label"
        android:text="发布二手商品"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignLeft="@+id/publish_iv_used"
        android:layout_alignStart="@+id/publish_iv_used" />

    <TextView
        style="@style/label"
        android:text="发布打印信息"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignRight="@+id/publish_iv_used"
        android:layout_alignEnd="@+id/publish_iv_used" />

    <ImageView
        android:layout_height="100dp"
        app:srcCompat="@drawable/lostfound"
        android:cropToPadding="false"
        android:layout_width="100dp"
        android:clickable="true"
        android:id="@+id/publish_iv_print"
        android:adjustViewBounds="false"
        android:layout_alignTop="@+id/publish_iv_join"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

</RelativeLayout>